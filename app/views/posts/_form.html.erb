<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Title:", input_html: { class: "input "}, wrapper: false, label_html: {class: "label"}, placeholder: "Greetings", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body, label: "Say:", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Hello World!" %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>